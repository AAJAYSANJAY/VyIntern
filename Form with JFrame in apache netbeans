    private void ListBooks()
    {
        DefaultTableModel e = (DefaultTableModel) Booktable.getModel();
        while(e.getRowCount()>0)
        {
            for(int i=0;i<e.getRowCount();i++)
            {
                e.removeRow(i);
            }
                    
                    
   
        }
        try {
            Class.forName("com.mysql.cj.jdbc.Driver");
            Connection a = DriverManager.getConnection("jdbc:mysql://localhost:3306/lib", "root", "12345678");
            Statement b = a.createStatement();
            ResultSet c = b.executeQuery("SELECT * FROM rec");

            while (c.next()) {
                Object[] data = {c.getString("BID"), c.getString("BNAME"), c.getString("DOI")};
                e.addRow(data);
            }
            c.close();
            b.close();
            a.close();
        } catch (Exception ex) {
            System.out.println(ex);
        }
        
    }
    private void jButton1ActionPerformed(java.awt.event.ActionEvent evt) {                                         
        ListBooks();
    }                                        

    private void jTextField4ActionPerformed(java.awt.event.ActionEvent evt) {                                            
        // TODO add your handling code here:
    }                                           

    private void addbookActionPerformed(java.awt.event.ActionEvent evt) {                                        
        // TODO add your handling code here:
        DefaultTableModel e = (DefaultTableModel) Booktable.getModel();
        String bid = bookid.getText();
        String bname = bookname.getText();
        String bdate = bookdate.getText();
        try {
            Class.forName("com.mysql.cj.jdbc.Driver");
            Connection a = DriverManager.getConnection("jdbc:mysql://localhost:3306/lib", "root", "12345678");
            Statement b = a.createStatement();
            b.executeUpdate("Insert into rec values('"+bid+"','"+bname+"','"+bdate+"')");

            
        } catch (Exception ex) {
            System.out.println(ex);
        }
        bookid.setText("");
        bookname.setText("");
        bookdate.setText("");
        ListBooks();
    }                                       

    private void editActionPerformed(java.awt.event.ActionEvent evt) {                                     
        // TODO add your handling code here:
        DefaultTableModel e = (DefaultTableModel) Booktable.getModel();
        int row = Booktable.getSelectedRow();
        bookid.setText(e.getValueAt(row,0).toString());
        bookname.setText(e.getValueAt(row, 1).toString());
        bookdate.setText(e.getValueAt(row, 2).toString());
        
        
        
    }                                    

    private void updateActionPerformed(java.awt.event.ActionEvent evt) {                                       
        // TODO add your handling code here:
        String bid1=bookid.getText();
        String bname1=bookname.getText();
        String bdate1=bookdate.getText();
        try {
            Class.forName("com.mysql.cj.jdbc.Driver");
            Connection a = DriverManager.getConnection("jdbc:mysql://localhost:3306/lib", "root", "12345678");
            Statement b = a.createStatement();
             b.executeUpdate("UPDATE rec SET BNAME = '"+bname1+"', DOI = '"+bdate1+"' WHERE BID = '"+bid1+"' ");
           
            
    
    

            
        } catch (Exception ex) {
            System.out.println(ex);
        }
        bookid.setText("");
        bookname.setText("");
        bookdate.setText("");
        ListBooks();
        
        
    }                                      

    private void delete1ActionPerformed(java.awt.event.ActionEvent evt) {                                        
        // TODO add your handling code here:
        DefaultTableModel e = (DefaultTableModel) Booktable.getModel();
        int row = Booktable.getSelectedRow();
        String bid2 = e.getValueAt(row, 0).toString();

        try {
            Class.forName("com.mysql.cj.jdbc.Driver");
            Connection a = DriverManager.getConnection("jdbc:mysql://localhost:3306/lib", "root", "12345678");
            Statement b = a.createStatement();
             b.executeUpdate("delete from rec WHERE BID = '"+bid2+"' ");
           
            
    
    

            
        } catch (Exception ex) {
            System.out.println(ex);
        }
        ListBooks();
        
        
    }                                       

